<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorAccent"
    android:elevation="@dimen/card_view_elevation"
    app:cardCornerRadius="@dimen/activity_field_radius"
    android:layout_margin="@dimen/card_view_margin_4dp">

    <TextView
        android:id="@+id/activity_label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_input_layout_padding"
        android:hint="@string/activity_label_name"
        android:textSize="@dimen/subtitle1"
        android:fontFamily="@font/worksanssemibold"
        android:textColor="@color/colorPrimaryText"
        android:gravity="center_horizontal|center_vertical"/>

</android.support.v7.widget.CardView>